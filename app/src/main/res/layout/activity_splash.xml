<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/txtMy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my"
            android:textSize="50sp"
            android:textColor="#8EAFE2"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtHealth"
            android:layout_marginStart="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="300dp"/>

    <TextView
            android:id="@+id/txtHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/health"
            android:textStyle="bold"
            android:textSize="90sp"
            android:textColor="#8EAFE2"
            android:fontFamily="cursive"
            android:layout_toEndOf="@+id/txtMy"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtMy"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="300dp"/>

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_meditation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="120dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>